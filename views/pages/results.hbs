<div class="top-twocol">
    <div class="top-twocol__first">
        <h1 class="heading-xlarge">{{__ 'results.page.title' }}</h1>
    </div>
    {{#if results}}
    <div class="top-twocol__last">
        <p class="back-link"><a href="/">{{__ 'results.page.backToSearch' }}</a></p>
    </div>
    {{/if}}
</div>

<div class="job-search">

    <div class="job-search__results-container">

        <div class="job-search__results-list-container">

            <h2 class="sr-only">{{__ 'results.page.yourResults' }}</h2>

            <p class="job-search__total-results"><strong id="search-results-total">{{ pager.totalResults }}</strong> {{__n 'results.page.totalJobsFoundPlural' 'results.page.totalJobsFoundSingular' pager.totalResults }}</p>

            {{#if results}}
                {{> search/results items=results }}
                {{> pagination/pagination pager }}
            {{/if}}

            {{#unless results}}
            <div class="job-search__no-results">
                <p>{{__ 'results.page.noResultsText1' }} - <a href="/">{{__ 'results.page.noResultsText2' }}</a>.</p>
            </div>
            {{/unless}}

        </div>

        <div class="job-search__filters">
            <h2 class="job-search__filters-title">{{__ 'results.page.filterResultsTitle' }}</h2>
            {{> search/filter filters=filters departments=departments }}
        </div>

    </div>

</div>