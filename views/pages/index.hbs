<h1 class="heading-xlarge">{{__ 'home.page.title' }}</h1>

<div class="panel panel-border-wide">
  <p>{{__ 'home.language.statement' }} (<a href="{{__ 'home.language.url' }}">{{__ 'home.language.label' }}</a>)</p>
</div>

<form method="GET" action="/results">
    <div class="form-section">
        <div class="form-group">
            <label class="form-label-bold" for="keyword">{{__ 'global.labels.keyword' }}</label>
            <input class="form-control" id="keyword" name="keyword" type="text" required>
        </div>
        <div class="form-group">
            <label class="form-label-bold" for="location">{{__ 'global.labels.location' }}</label>
            <input class="form-control" id="location" name="location" type="text" required>
        </div>
        <div class="form-group">
            <input type="submit" class="button" value="{{__ 'global.buttons.search' }}">
        </div>
    </div>
</form>