<h1 class="heading-xlarge">Job Search</h1>

<form method="GET" action="/results">
    <div class="form-section">
        <div class="form-group">
            <label class="form-label-bold" for="keyword">Keyword</label>
            <input class="form-control" id="keyword" name="keyword" type="text" required>
        </div>
        <div class="form-group">
            <label class="form-label-bold" for="location">Location</label>
            <input class="form-control" id="location" name="location" type="text" required>
        </div>
        <div class="form-group">
            <button class="button">Search</button>
        </div>
    </div>
</form>