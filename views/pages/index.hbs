<form method="GET" action="/results">
    <div class="form-section">

        <div class="form-group">
            <label class="form-label-bold" for="keyword">
                <span class="form-label-bold">{{__ 'global.labels.keyword' }} ({{__ 'global.labels.optional' }})</span>
                <span class="form-hint">{{__ 'global.labels.helpText.keyword'}}</span>
            </label>
            <input
               class="form-control"
               id="keyword"
               name="keyword"
               type="text"
               value="{{ formData.keyword }}">
        </div>

        <div class="form-group allies_autocomplete-wrapper allies_autocomplete-wrapper--home">
            <label class="form-label-bold" for="allies_autocomplete">
                <span class="form-label-bold">{{__ 'global.labels.location' }} ({{__ 'global.labels.optional' }})</span>
            </label>
            <input class="form-control" id="allies_autocomplete" name="location" type="text" value="{{ formData.location }}">
        </div>

        <div class="form-group">
            <input type="submit" class="button" value="{{__ 'global.buttons.search' }}">
        </div>

    </div>
</form>

<script type="application/ld+json">
    {{{json homeJson}}}
</script>